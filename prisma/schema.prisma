generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Item {
    id            Int           @id
    key           String        @unique
    name          String
    image         String
    category      String
    seasons       String[]
    extraText     String[]
    source        Json
    marketEntries MarketEntry[]
}

model MarketEntry {
    id           Int      @id
    item         Item     @relation(fields: [itemId], references: [id])
    itemId       Int
    itemCount    Int
    sellerId     Int
    sellerName   String
    category     String
    priceType    Currency
    priceCount   Int
    expiryTime   DateTime
    creationTime DateTime
}

enum Currency {
    NOTE
    ESSENCE
}
